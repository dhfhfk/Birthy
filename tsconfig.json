{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "typeRoots": ["./@types", "./node_modules/@types"],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowJs": true
    }
}
